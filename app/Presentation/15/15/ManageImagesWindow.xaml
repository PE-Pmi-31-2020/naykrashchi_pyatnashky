                    <DropShadowEffect/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter Property="Button.Background" Value="DarkCyan"/>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
