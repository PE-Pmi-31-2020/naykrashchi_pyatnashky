<Window x:Class="Fifteens.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fifteens"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Background="{StaticResource BackgroundBrush}" LastChildFill="True">
            <DockPanel DockPanel.Dock="Top">
                <Button x:Name="BackButton" DockPanel.Dock="Left" Content="Back" MinWidth="50" Margin="10" HorizontalAlignment="Left"/>
                <Button x:Name="SaveMatchButton" DockPanel.Dock="Left" Content="Save Match" MinWidth="50" Margin="10" HorizontalAlignment="Left"/>
                <Label x:Name="TimeLabel" DockPanel.Dock="Right" Content="0" Margin="10" FontSize="16" HorizontalAlignment="Right"></Label>
                <Label x:Name="TurnsLabel" DockPanel.Dock="Right" Content="Turns: 0" Margin="10" FontSize="16" HorizontalAlignment="Right"></Label>
            </DockPanel>
            
            <WrapPanel x:Name="FieldContainer" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="225" MaxWidth="400">
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
